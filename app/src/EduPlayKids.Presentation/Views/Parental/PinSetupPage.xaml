<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EduPlayKids.App.Views.Parental.PinSetupPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:EduPlayKids.App.ViewModels.Parental"
             x:DataType="vm:PinSetupViewModel"
             Title="Parental Controls Setup"
             Shell.NavBarIsVisible="True"
             BackgroundColor="#F8F9FA">

    <!-- Professional adult-oriented UI for parental controls setup -->
    <ScrollView>
        <Grid Padding="20" RowSpacing="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="10">
                <Label Text="ðŸ”’ Set Up Parental Controls"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       HorizontalOptions="Center" />

                <Label Text="Create a 4-digit PIN to secure access to parental controls and settings."
                       FontSize="16"
                       TextColor="#5D6D7E"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap" />
            </StackLayout>

            <!-- PIN Entry Section -->
            <Frame Grid.Row="1"
                   BackgroundColor="White"
                   BorderColor="#E0E6ED"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="Create Your PIN"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50" />

                    <!-- PIN Input with Visual Feedback -->
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Spacing="15">
                        <Entry x:Name="PinDigit1"
                               Text="{Binding Pin, Converter={StaticResource PinDigitConverter}, ConverterParameter=0}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnPinDigitChanged" />

                        <Entry x:Name="PinDigit2"
                               Text="{Binding Pin, Converter={StaticResource PinDigitConverter}, ConverterParameter=1}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnPinDigitChanged" />

                        <Entry x:Name="PinDigit3"
                               Text="{Binding Pin, Converter={StaticResource PinDigitConverter}, ConverterParameter=2}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnPinDigitChanged" />

                        <Entry x:Name="PinDigit4"
                               Text="{Binding Pin, Converter={StaticResource PinDigitConverter}, ConverterParameter=3}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnPinDigitChanged" />
                    </StackLayout>

                    <!-- PIN Confirmation -->
                    <Label Text="Confirm Your PIN"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           Margin="0,15,0,0" />

                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Spacing="15">
                        <Entry x:Name="ConfirmPinDigit1"
                               Text="{Binding ConfirmPin, Converter={StaticResource PinDigitConverter}, ConverterParameter=0}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnConfirmPinDigitChanged" />

                        <Entry x:Name="ConfirmPinDigit2"
                               Text="{Binding ConfirmPin, Converter={StaticResource PinDigitConverter}, ConverterParameter=1}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnConfirmPinDigitChanged" />

                        <Entry x:Name="ConfirmPinDigit3"
                               Text="{Binding ConfirmPin, Converter={StaticResource PinDigitConverter}, ConverterParameter=2}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnConfirmPinDigitChanged" />

                        <Entry x:Name="ConfirmPinDigit4"
                               Text="{Binding ConfirmPin, Converter={StaticResource PinDigitConverter}, ConverterParameter=3}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               BackgroundColor="#F8F9FA"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               MaxLength="1"
                               Keyboard="Numeric"
                               TextChanged="OnConfirmPinDigitChanged" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Security Question Section -->
            <Frame Grid.Row="2"
                   BackgroundColor="White"
                   BorderColor="#E0E6ED"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="Security Question"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50" />

                    <Label Text="Choose a security question to help recover your PIN if forgotten."
                           FontSize="14"
                           TextColor="#5D6D7E"
                           LineBreakMode="WordWrap" />

                    <Entry Text="{Binding SecurityQuestion}"
                           Placeholder="Enter a personal question only you would know"
                           FontSize="16"
                           TextColor="#2C3E50"
                           BackgroundColor="#F8F9FA"
                           HeightRequest="45" />

                    <Entry Text="{Binding SecurityAnswer}"
                           Placeholder="Enter your answer"
                           FontSize="16"
                           TextColor="#2C3E50"
                           BackgroundColor="#F8F9FA"
                           HeightRequest="45"
                           Margin="0,10,0,0" />
                </StackLayout>
            </Frame>

            <!-- Security Tips -->
            <Frame Grid.Row="3"
                   BackgroundColor="#E8F4FD"
                   BorderColor="#3498DB"
                   CornerRadius="8"
                   Padding="15">
                <StackLayout Spacing="8">
                    <Label Text="ðŸ’¡ Security Tips"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#2980B9" />

                    <Label Text="â€¢ Use a PIN that's easy for you to remember but hard for children to guess"
                           FontSize="13"
                           TextColor="#34495E" />

                    <Label Text="â€¢ Avoid simple patterns like 1234 or repeated digits"
                           FontSize="13"
                           TextColor="#34495E" />

                    <Label Text="â€¢ Your security question should be personal and memorable"
                           FontSize="13"
                           TextColor="#34495E" />
                </StackLayout>
            </Frame>

            <!-- Error/Status Messages -->
            <Label Grid.Row="4"
                   Text="{Binding ErrorMessage}"
                   FontSize="14"
                   TextColor="#E74C3C"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap" />

            <!-- Action Buttons -->
            <StackLayout Grid.Row="5"
                         Spacing="15"
                         VerticalOptions="End"
                         Margin="0,20,0,0">

                <Button Text="Set Up PIN"
                        Command="{Binding SetupPinCommand}"
                        BackgroundColor="#27AE60"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="25"
                        IsEnabled="{Binding CanSetupPin}" />

                <Button Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Transparent"
                        TextColor="#7F8C8D"
                        FontSize="16"
                        HeightRequest="45"
                        BorderColor="#BDC3C7"
                        BorderWidth="1"
                        CornerRadius="22" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>